            <Button.Content>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8F4;"/>
            </Button.Content>
        </Button>
        <Button x:Name="butOpen" AutomationProperties.Name="Open" ToolTipService.ToolTip="Open" RelativePanel.RightOf="butNew" RelativePanel.Below="menuBar" Click="FileOpenButton_Click">
            <Button.Content>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8E5;"/>
            </Button.Content>
        </Button>
        <Button x:Name="butClose" AutomationProperties.Name="Close" ToolTipService.ToolTip="Close" RelativePanel.RightOf="butOpen" RelativePanel.Below="menuBar" Click="FileCloseButton_Click">
            <Button.Content>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8BB;"/>
            </Button.Content>
        </Button>
        <Button x:Name="butSave" AutomationProperties.Name="Save" ToolTipService.ToolTip="Save" RelativePanel.RightOf="butClose" RelativePanel.Below="menuBar" Click="FileSaveButton_Click">
