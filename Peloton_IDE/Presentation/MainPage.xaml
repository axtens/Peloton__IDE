                    <MenuFlyoutItem x:Name="mnuRTF" Text="RTF" Click="InterpretMenu_Rendering_Click" Tag="31"/>
                    <MenuFlyoutItem x:Name="mnuHTML" Text="HTML" Click="InterpretMenu_Rendering_Click" Tag="21"/>
                    <MenuFlyoutItem x:Name="mnuLogo" Text="Logo" Click="InterpretMenu_Rendering_Click" Tag="42"/>
                </MenuFlyoutSubItem>
                <MenuFlyoutSubItem x:Name="mnuChooseEngine" Text="Choose runtime engine">
                    <MenuFlyoutItem Text="P2 Protium" x:Name="mnuOldEngine" Click="ChooseEngine_Click" Tag="P2"/>
                    <MenuFlyoutItem Text="P3 Peloton" x:Name="mnuNewEngine" Click="ChooseEngine_Click" Tag="P3"/>
                </MenuFlyoutSubItem>
            </MenuBarItem>
            <MenuBarItem Title="Source" BorderBrush="LightGray" BorderThickness="1" x:Name="mnuSource">
                <MenuFlyoutItem x:Name="mnuTranslate" Text="Translate" Click="MnuTranslate_Click"/>
                <MenuFlyoutItem Name="mnuVariableLength" Click="VariableLength_Click" Text="Variable Length"/>
                <MenuFlyoutSubItem Name="mnuCodeTemplates" Text="Code templates">
                    <MenuFlyoutItem Name="MakePeloton" Text="Make Peloton structure" Click="InsertCodeTemplate_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="None" Key="F2"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Name="MakePelotonVariableLength" Text="Make variable" Click="InsertCodeTemplate_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="None" Key="F3"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuFlyoutSubItem>
            </MenuBarItem>
