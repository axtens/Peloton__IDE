                        <MenuFlyoutItem x:Name="tptSOAP" Text="SOAP Transput" Click="InterpretMenu_Transput_Click" Tag="28"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem x:Name="tptDocumentBased" Text="Document-based Transputs">
