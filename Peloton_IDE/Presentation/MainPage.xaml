                        <MenuFlyoutItem x:Name="tptHTMLTidy" Text="HTML Tidy Transput" Click="InterpretMenu_Transput_Click" Tag="24"/>
                        <MenuFlyoutItem x:Name="tptHTMLIndirect" Text="HTML Indirect Transput" Click="InterpretMenu_Transput_Click" Tag="25"/>
                        <MenuFlyoutItem x:Name="tptTesting" Text="Testing Transput" Click="InterpretMenu_Transput_Click" Tag="26"/>
