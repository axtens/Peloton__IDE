                        <MenuFlyoutItem x:Name="tptConsole" Text="Console Transput" Click="InterpretMenu_Transput_Click" Tag="2"/>
                        <MenuFlyoutItem x:Name="tptText" Text="Text Transput" Click="InterpretMenu_Transput_Click" Tag="3"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem x:Name="tptWindowing" Text="Windowing Transputs">
