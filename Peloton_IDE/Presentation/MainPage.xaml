                <MenuFlyoutItem x:Name="mnuPowerShellStatus" Text="Show PowerShell Status" Click="ShowPowerShell_Click"/>
                <MenuFlyoutItem x:Name="mnuShowTabs" Text="Show Tabs" Click="ShowTabs_Click"/>
                <MenuFlyoutItem x:Name="mnuHelpAbout" Text="About" Click="HelpAbout_Click"/>
