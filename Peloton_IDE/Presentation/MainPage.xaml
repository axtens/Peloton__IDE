                <MenuFlyoutItem x:Name="mnuIDEConfiguration" Text="Editor Configuration" Click="MnuIDEConfiguration_Click" Command="{Binding GoToIDEConfig}"/>
                <MenuFlyoutSubItem x:Name="mnuSelectLanguage" Text="Choose interface language"/>
                <MenuFlyoutSubItem x:Name="mnuTabCreationMethod" Text="Tab Creation Method">
                    <MenuFlyoutItem x:Name="mnuPerTabSettings" Text="Inherit PerTab Settings" Click="SettingsMenu_EditorConfiguration_Click" Tag="PerTab" />
                    <MenuFlyoutItem x:Name="mnuCurrentTabSettings" Text="Inherit Current Tab Settings" Click="SettingsMenu_EditorConfiguration_Click" Tag="CurrentTab"/>
                </MenuFlyoutSubItem>

            </MenuBarItem>
            <MenuBarItem Title="Window" BorderBrush="LightGray" BorderThickness="1" x:Name="mnuWindow"/>
            <MenuBarItem x:Name="mnuHelp" Title="Help" BorderBrush="LightGray" BorderThickness="1">
                <MenuFlyoutItem x:Name="mnuHelpIndex" Text="Help" Click="Help_Click"/>
                <MenuFlyoutItem x:Name="mnuReset" Text="Reset to factory settings" Click="ResetToFactorySettings_Click"/>
                <MenuFlyoutSubItem x:Name="mnuComponentUpdater" Text="Component Updater">
                    <MenuFlyoutItem x:Name="mnuUpdateAll" Text="Update All" Click="ComponentUpdater_Update" Tag="all" />
                    <MenuFlyoutItem x:Name="mnuUpdateInterpreter" Text="Update Interpreter" Click="ComponentUpdater_Update" Tag="bin" />
                    <MenuFlyoutItem x:Name="mnuUpdateLexers" Text="Update Lexers" Click="ComponentUpdater_Update" Tag="bin/lexers" />
                    <MenuFlyoutItem x:Name="mnuUpdateCodeSamples" Text="Update Code Samples" Click="ComponentUpdater_Update" Tag="code" />
                    <MenuFlyoutItem x:Name="mnuUpdateDatabaseSamples" Text="Update Database Samples" Click="ComponentUpdater_Update" Tag="data" />
                    <MenuFlyoutItem x:Name="mnuDownloadPowerShell" Text="Download and Install PowerShell" Click="ComponentUpdater_DownloadPowerShell" Tag="" />
                </MenuFlyoutSubItem>
